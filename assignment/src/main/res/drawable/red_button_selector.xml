<selector xmlns:android="http://schemas.android.com/apk/res/android">

<item
    android:state_focused="false"
    android:state_pressed="true">

    <shape
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">

        <gradient
            android:startColor="#dddada"
            android:endColor="#dddada"
            android:angle="270" />

        <stroke android:width="0dip" android:color="#cdcbcb"/>
        <corners
            android:radius="10dp"/>

    </shape>

</item>

<item
    android:state_focused="false"
    android:state_pressed="false">

    <shape
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="rectangle">

        <gradient
            android:startColor="#d96459"
            android:endColor="#d96459"
            android:angle="270"/>

        <stroke android:width="0dip" android:color="#cdcbcb"/>

        <corners
            android:radius="10dp"/>

    </shape>

</item>
</selector>
